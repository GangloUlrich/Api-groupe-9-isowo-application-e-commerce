<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7E8E8"
    tools:context=".Payement">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="#ffff"
        android:padding="10dp"
        android:background="@drawable/radius"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:minHeight="100dp"
                android:minWidth="100dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_payment_24"/>
            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Code de Payement"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Nom sur la Carte:"
                android:textColor="@color/black"/>
            <EditText
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:background="@drawable/radius"
                android:layout_height="wrap_content"
                android:height="50dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Numero sur la Carte:"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"/>
            <EditText
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/radius"
                android:height="50dp"
                android:inputType="number"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date d'expiration:"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"/>
            <EditText
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:background="@drawable/radius"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:height="50dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Code de securitÃ©:"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"/>
            <EditText
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:background="@drawable/radius"
                android:height="50dp"/>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:width="400dp"
                android:height="70dp"
                android:text="Continue to Checkout"
                android:textColor="@color/white"
                android:textStyle="bold"/>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>